{
  "version": "1.0.2",
  "id": "@shopgate-project/product-recommendations",
  "components": [
    {
      "id": "ProductRecommendations",
      "path": "frontend/widgets/ProductRecommendations/index.jsx",
      "type": "widgets",
      "description": "Custom widget for recommended products on a CMS page"
    },
    {
      "id": "recommendations",
      "path": "frontend/pages/Recommendations/index.jsx",
      "target": "app.routes",
      "type": "portals"
    },
    {
      "id": "PDPHeaderAfter",
      "type": "portals",
      "path": "frontend/portals/Recommendations",
      "target": "product.header.after"
    },
    {
      "id": "PDPDescriptionAfter",
      "type": "portals",
      "path": "frontend/portals/Recommendations",
      "target": "product.description.after"
    },
    {
      "id": "PDPReviewAfter",
      "type": "portals",
      "path": "frontend/portals/Recommendations",
      "target": "product.reviews.after"
    },
    {
      "id": "CartCouponFieldBefore",
      "type": "portals",
      "path": "frontend/portals/Recommendations",
      "target": "cart.coupon-field.before"
    },
    {
      "id": "CartCouponFieldAfter",
      "type": "portals",
      "path": "frontend/portals/Recommendations",
      "target": "cart.coupon-field.after"
    },
    {
      "id": "recommendationsByType",
      "path": "frontend/reducers/index.js",
      "type": "reducers"
    },
    {
      "id": "Subscribers",
      "path": "frontend/subscriptions/index.js",
      "type": "subscribers"
    }
  ],
  "configuration": {
    "recommendationsPage": {
      "type": "admin",
      "destination": "frontend",
      "default": {
        "title": "",
        "h2": "",
        "h3": "",
        "background": "",
        "textColor": ""
      },
      "params": {
        "label": "Config for the recommendation page",
        "type": "json"
      }
    },
    "productPage": {
      "type": "admin",
      "destination": "frontend",
      "default": {
        "h2": "",
        "h3": "",
        "background": "",
        "textColor": "",
        "position": ""
      },
      "params": {
        "label": "Config for the product page",
        "type": "json"
      }
    },
    "cartPage": {
      "type": "admin",
      "destination": "frontend",
      "default": {
        "h2": "",
        "h3": "",
        "background": "",
        "textColor": "",
        "position": ""
      },
      "params": {
        "label": "Config for the cart page",
        "type": "json"
      }
    }
  }
}